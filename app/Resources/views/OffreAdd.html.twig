	<link rel="stylesheet" type="text/css" href="{{asset('bundles/DemandeBundle/vendor/select2/select2.min.css')}}">
<!--===============================================================================================-->
	<link rel="stylesheet" type="text/css" href="{{asset('bundles/DemandeBundle/css/util.css')}}">
	<link rel="stylesheet" type="text/css" href="{{asset('bundles/DemandeBundle/css/main.css')}}">
<!--===============================================================================================-->
{% endblock %}
{% block content %}
{% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}
	<div class="contact1">
        
		<div class="container-contact1">
			<div class="contact1-pic js-tilt" data-tilt>
				<img src="{{asset('bundles/DemandeBundle/images/img-01.png')}}" alt="IMG">
			</div>
            {{ form_start(form)}}
			<form class="contact1-form validate-form">
				<span class="contact1-form-title">
					Proposer une offre
				</span>

				<div class="wrap-input1 validate-input" data-validate = "le Nom est obligatoire">
                    <label class="col-form-label col-md-3 col-sm-3  label-align">Nom</label>
                    <div class="col-md-6 col-sm-6">
                    {{ form_widget(form.nom, { 'attr': {'class': 'form-control', 'placeholder':'Nom'} }) }}
                    </div>
                    {% for errorItem in form.nom.vars.errors %}
                    <span class="help-inline">{{ errorItem.message }}</span>
                    {% endfor %}
				</div>
                <div class="wrap-input1 validate-input" data-validate = "le prénom est obligatoire">
                    <label class="col-form-label col-md-3 col-sm-3  label-align">Prénom</label>
                    <div class="col-md-6 col-sm-6">
                        {{ form_widget(form.prenom, { 'attr': {'class': 'form-control floating ', 'placeholder':'Prénom'} }) }}
                    </div>
                        {% for errorItem in form.prenom.vars.errors %}
                        <span class="help-inline">{{ errorItem.message }}</span>
                        {% endfor %}
                
				</div>
                <div class="wrap-input1 validate-input" data-validate = "l'adresse est obligatoire">
                    <label class="col-form-label col-md-3 col-sm-3  label-align">Addresse</label>
                    <div class="col-md-6 col-sm-6">
                        {{ form_widget(form.adresse, { 'attr': {'class': 'form-control floating', 'placeholder':'Addresse'} }) }}
                    </div>
                        {% for errorItem in form.adresse.vars.errors %}
                        <span class="help-inline">{{ errorItem.message }}</span>
                        {% endfor %}
				</div>
                <div class="wrap-input1 validate-input" data-validate = "le télèphone est obligatoire">
					<label class="col-form-label col-md-3 col-sm-3  label-align">Télèphone </label>
                        <div class="col-md-6 col-sm-6">                           
                            {{ form_widget(form.telephone, { 'attr': {'class': 'form-control floating', 'placeholder':'telephone'} }) }}
                        </div>
                            {% for errorItem in form.telephone.vars.errors %}
                            <span class="help-inline">{{ errorItem.message }}</span>
                            {% endfor %}
				</div>
                <div class="wrap-input1 validate-input" >
                    <label class="col-form-label col-md-3 col-sm-3  label-align">Fax</label>
                    <div class="col-md-6 col-sm-6">
                    {{ form_widget(form.fax,{ 'attr': {'class': 'form-control fax'} } ) }}
                    </div>
                    {% for errorItem in form.fax.vars.errors %}
                    <span class="help-inline">{{ errorItem.message }}</span>
                    {% endfor %}
				</div>

				<div class="wrap-input1 validate-input" data-validate = "un Valide email est obligatoire: ex@abc.xyz">
                    <label class="col-form-label col-md-3 col-sm-3  label-align">email</label>
                    <div class="col-md-6 col-sm-6">
                        {{ form_widget(form.email,{ 'attr': {'class': 'form-control'} } ) }}
                    </div>
                    {% for errorItem in form.email.vars.errors %}
                    <span class="help-inline">{{ errorItem.message }}</span>
                    {% endfor %}
				</div>

				<div class="field item form-group" >
                    <label class="col-form-label col-md-3 col-sm-3  label-align">Objet</label>
                    <div class="col-md-6 col-sm-6">
                        {{ form_widget(form.objet, { 'attr': {'class': 'form-control' , 'placeholder':'Objet'} }) }}
                    </div>
                        {% for errorItem in form.objet.vars.errors %}
                        <span class="help-inline">{{ errorItem.message }}</span>
                        {% endfor %}
				</div>

				<div class="wrap-input1 validate-input" data-validate = "Le Message est important">
					<div class="col-md-6 col-sm-6">
                        {{ form_widget(form.message, { 'attr': {'class': 'form-control' , 'placeholder':'message'} }) }}
                    </div>
                        {% for errorItem in form.message.vars.errors %}
                        <span class="help-inline">{{ errorItem.message }}</span>
                        {% endfor %}
				</div>

				<div class="container-contact1-form-btn">
					<button type="submit" class="contact1-form-btn">
						<span>
							Envoyer 
							<i class="fa fa-long-arrow-right" aria-hidden="true"></i>
						</span>
                    </button>
                    
                    <button type="reset" class="btn btn-danger">
						<span>
							Reset
							
						</span>
					</button>
                </div>
			</form>
                {{ form_end(form) }}
		</div>
	</div>
    {% else %}
    <center>
    <h1> vous devez etre connecter </h1>
    <button class="btn col-md-12 col-lg-6 btn-primary btn-block btn-lg login-btn" onclick="location.href='{{ path('fos_user_security_login') }}'">{{ 'layout.login'|trans({}, 'FOSUserBundle') }}</button>
    </center>
    {% endif %}





